generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  username String
  email String @unique
  password  String
  createdAt DateTime @default(now())
  posts Post[]
  Session Session[]
}


model Session {
  id        String   @id @default(uuid()) 
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
  userAgent String?
  ip        String?

  @@index([userId])
}


model Post{
  id  Int @id @default(autoincrement())
  title String
  content String?
  authorId Int
  author User @relation(fields: [authorId],references: [id])
}